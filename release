cd android
rm -f app/build/outputs/apk/hanilgw-release.apk
./gradlew assembleRelease
mkdir "$HOME/Public/Drop Box/hanilgw-release/$(date +%Y%m%d-%H)"
cp -p -f -v app/build/outputs/apk/hanilgw-release.apk "$HOME/Public/Drop Box/hanilgw-release/$(date +%Y%m%d-%H)/hanilgw.apk"
cd ..

cd ios
xcodebuild clean -project mobilegw.xcodeproj -configuration Release -alltargets
xcodebuild archive -project mobilegw.xcodeproj -scheme mobilegw -archivePath build/mobilegw.xcarchive
xcodebuild -exportArchive -archivePath build/mobilegw.xcarchive -exportPath build/outputs -exportOptionsPlist exportPlist.plist
mkdir "$HOME/Public/Drop Box/hanilgw-release/$(date +%Y%m%d-%H)"
cp -p -f -v build/outputs/mobilegw.ipa "$HOME/Public/Drop Box/hanilgw-release/$(date +%Y%m%d-%H)/hanilgw.ipa"
cd ..
